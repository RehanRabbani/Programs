using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace dateToWords
{
    class Program
    {
        static void Main(string[] args)

        {
            string orgPalind = "civic";
            string reversePalind = "";
            for (int i = orgPalind.Length - 1; i >= 0; i--)
            {
                reversePalind += orgPalind[i].ToString();
                
            }
            Console.WriteLine("Reversed" + reversePalind);
            
                if(orgPalind==reversePalind)
                {
                    Console.WriteLine("SUCCESS" );
                }
                else
                {
                    Console.WriteLine("Failed");
                }
          
            Console.ReadLine();
        }
    }
}
